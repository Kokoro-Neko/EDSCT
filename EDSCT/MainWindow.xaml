<Window x:Class="EDSCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDSCT"
        mc:Ignorable="d"
        Title="EDSCT - Elite Dangerous Ship Comparison Tool" WindowStartupLocation="Manual" Margin="0" Height="600" Width="800" MinWidth="800" MinHeight="600" Grid.IsSharedSizeScope="True" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" SnapsToDevicePixels="True" Visibility="Visible">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="395*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="370*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="shipBox1" Grid.Column="2" Margin="35,75,150,0" VerticalAlignment="Top" ToolTip="Select first ship for comparison" FontFamily="MicraC" FontWeight="Bold" HorizontalAlignment="Center" Width="200" Height="18"/>
        <ComboBox x:Name="shipBox2" Grid.Column="4" HorizontalAlignment="Left" Margin="125,75,0,0" VerticalAlignment="Top" Width="200" ToolTip="Select second ship for comparison" FontFamily="Micra" FontWeight="Bold" Height="18"/>
        <Label x:Name="shipHorizonsLabel1" Content="Horizons only :" HorizontalAlignment="Center" Margin="0,100,150,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="110" Grid.Column="2"/>
        <Label x:Name="shipHorizonsLabel2" Content=": Horizons only" Grid.Column="4" HorizontalAlignment="Center" Margin="100,100,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="110"/>
        <TextBlock x:Name="HorizonsBool1" HorizontalAlignment="Center" Margin="0,105,0,0" TextWrapping="Wrap" Text="No" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Lime" Height="18" Width="20" Grid.Column="2"/>
        <TextBlock x:Name="HorizonsBool2" Grid.Column="4" HorizontalAlignment="Center" Margin="150,105,198,0" TextWrapping="Wrap" Text="Yes" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Red" Height="19" Width="22"/>
        <Label x:Name="shipHullLabel1" Content="Hull :" Grid.Column="2" HorizontalAlignment="Center" Margin="132,125,217,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="46"/>
        <Label x:Name="shipHullLabel2" Content=": Hull" Grid.Column="4" HorizontalAlignment="Center" Margin="180,125,144,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="46"/>
        <TextBlock x:Name="shipHullValue1" Grid.Column="2" HorizontalAlignment="Center" Margin="188,130,199,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Red" Height="19" Width="8"/>
        <TextBlock x:Name="shipHullValue2" Grid.Column="4" HorizontalAlignment="Center" Margin="164,130,198,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Lime" Height="19" Width="8"/>
        <Label x:Name="shipShieldsLabel1" Content="Shields :" Grid.Column="2" HorizontalAlignment="Center" Margin="113,145,207,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="75"/>
        <Label x:Name="shipShieldsLabel2" Content=": Shields" Grid.Column="4" HorizontalAlignment="Center" Margin="180,145,115,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="75"/>
        <TextBlock x:Name="shipShieldsValue1" Grid.Column="2" HorizontalAlignment="Center" Margin="188,150,199,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Blue" Height="19" Width="8"/>
        <TextBlock x:Name="shipShieldsValue2" Grid.Column="4" HorizontalAlignment="Center" Margin="164,150,198,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Blue" Height="19" Width="8"/>







        <TextBox x:Name="testBox" Grid.Column="4" HorizontalAlignment="Left" Height="23" Margin="0,500,-106,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="476" FontWeight="Bold" Visibility="Hidden"/>

    </Grid>
</Window>
