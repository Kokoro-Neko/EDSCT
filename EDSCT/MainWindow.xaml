<Window x:Class="EDSCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDSCT"
        mc:Ignorable="d"
        Title="EDSCT - Elite Dangerous Ship Comparison Tool" WindowStartupLocation="Manual" Margin="0" Height="600" Width="800" MinWidth="800" MinHeight="600" Grid.IsSharedSizeScope="True" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" SnapsToDevicePixels="True" Visibility="Visible">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="395*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="370*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="shipBox1" Grid.Column="2" Margin="35,75,150,0" VerticalAlignment="Top" ToolTip="Select first ship for comparison" FontFamily="MicraC" FontWeight="Bold" HorizontalAlignment="Center" Width="200" Height="18" SelectionChanged="shipBox1_SelectionChanged"/>
        <ComboBox x:Name="shipBox2" Grid.Column="4" HorizontalAlignment="Left" Margin="125,75,0,0" VerticalAlignment="Top" Width="200" ToolTip="Select second ship for comparison" FontFamily="Micra" FontWeight="Bold" Height="18" SelectionChanged="shipBox2_SelectionChanged"/>
        <Label x:Name="shipHorizonsLabel1" Content="Horizons only :" HorizontalAlignment="Center" Margin="0,100,150,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="110" Grid.Column="2"/>
        <Label x:Name="shipHorizonsLabel2" Content=": Horizons only" Grid.Column="4" HorizontalAlignment="Center" Margin="100,100,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="110"/>
        <TextBlock x:Name="HorizonsBool1" HorizontalAlignment="Center" Margin="0,105,0,0" TextWrapping="Wrap" Text="No" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Lime" Height="18" Width="22" Grid.Column="2"/>
        <TextBlock x:Name="HorizonsBool2" Grid.Column="4" HorizontalAlignment="Center" Margin="150,105,198,0" TextWrapping="Wrap" Text="Yes" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Red" Height="19" Width="22"/>
        <Label x:Name="shipArmorLabel1" Content="Armor :" Grid.Column="2" HorizontalAlignment="Center" Margin="115,125,210,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="65"/>
        <Label x:Name="shipArmorLabel2" Content=": Armor" Grid.Column="4" HorizontalAlignment="Center" Margin="60,125,5,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="65"/>
        <TextBlock x:Name="shipArmorValue1" Grid.Column="2" HorizontalAlignment="Center" Margin="188,128,181,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Red" Height="19" Width="25"/>
        <TextBlock x:Name="shipArmorValue2" Grid.Column="4" HorizontalAlignment="Center" Margin="150,130,190,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Lime" Height="19" Width="25"/>
        <Label x:Name="shipShieldsLabel1" Content="Shields :" Grid.Column="2" HorizontalAlignment="Center" Margin="106,145,200,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="75"/>
        <Label x:Name="shipShieldsLabel2" Content=": Shields" Grid.Column="4" HorizontalAlignment="Center" Margin="180,145,115,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White" Height="29" Width="75"/>
        <TextBlock x:Name="shipShieldsValue1" Grid.Column="2" HorizontalAlignment="Center" Margin="160,150,150,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Blue" Height="19" Width="25"/>
        <TextBlock x:Name="shipShieldsValue2" Grid.Column="4" HorizontalAlignment="Center" Margin="100,150,140,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="Blue" Height="19" Width="25"/>







        <TextBox x:Name="testBox" Grid.Column="4" HorizontalAlignment="Left" Height="23" Margin="0,500,-106,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="476" FontWeight="Bold" Visibility="Hidden"/>

    </Grid>
</Window>
