<Window x:Class="EDSCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDSCT"
        mc:Ignorable="d"
        Title="EDSCT - Elite Dangerous Ship Comparison Tool" WindowStartupLocation="Manual" Margin="0" Height="600" Width="800" MinWidth="800" MinHeight="600" Grid.IsSharedSizeScope="True" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" SnapsToDevicePixels="True" Visibility="Visible">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="254*"/>
            <ColumnDefinition Width="134*"/>
            <ColumnDefinition Width="361*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="shipBox1" Grid.Column="2" HorizontalAlignment="Left" Margin="25,75,0,0" VerticalAlignment="Top" Width="200" ToolTip="Select first ship for comparison" FontFamily="MicraC" FontWeight="Bold"/>
        <ComboBox x:Name="shipBox2" Grid.Column="4" Margin="0,75,50,0" VerticalAlignment="Top" Width="200" ToolTip="Select second ship for comparison" FontFamily="Micra" FontWeight="Bold" HorizontalAlignment="Right"/>
        <Label x:Name="shipHPLabel1" Content="HP =" Grid.Column="2" HorizontalAlignment="Left" Margin="85,120,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <Label x:Name="shipHPLabel2" Content="= HP" Grid.Column="4" HorizontalAlignment="Left" Margin="205,120,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="shipHPValue1" Grid.Column="2" HorizontalAlignment="Left" Margin="130,125,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="shipHPValue2" Grid.Column="4" HorizontalAlignment="Left" Margin="195,125,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="shipValue1" Grid.Column="2" HorizontalAlignment="Left" Margin="130,125,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="shipValue2" Grid.Column="4" HorizontalAlignment="Left" Margin="195,125,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="ship1HPValue1" Grid.Column="2" HorizontalAlignment="Left" Margin="130,125,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="shipH1PValue2" Grid.Column="4" HorizontalAlignment="Left" Margin="195,125,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="shipH2PValue1" Grid.Column="2" HorizontalAlignment="Left" Margin="130,125,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="ship2HPValue2" Grid.Column="4" HorizontalAlignment="Left" Margin="195,125,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Foreground="White"/>
        <TextBox x:Name="testBox" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="109,256,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="476" Grid.ColumnSpan="3" FontWeight="Bold" Visibility="Hidden"/>

    </Grid>
</Window>
